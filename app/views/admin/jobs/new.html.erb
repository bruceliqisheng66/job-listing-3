<h1> Add a job </h1>

<%= simple_form_for [:admin, @job] do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "Wage_lower_bound:SGD" %>
<%= f.input :wage_upper_bound, :label => "Wage_upper_bound:SGD" %>
<%= f.input :contact_email %>
<%= f.input :location %>
<%= f.input :is_hidden %>

  <%= f.submit "Submit" %>
  <% end %>
